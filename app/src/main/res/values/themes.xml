<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Utslec" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Gunakan CustomTextAppearance secara global -->
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
    </style>

    <style name="Theme.SignUp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
    </style>

    <style name="Theme.SignIn" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
    </style>

    <style name="Theme.MenuActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
    </style>

    <style name="Theme.ProfilePageActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
    </style>

    <style name="Theme.EditAccountActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
    </style>

    <!-- Custom TextAppearance yang akan digunakan secara global -->
    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat">
        <!-- Nama font harus sesuai dengan file di res/font -->
        <item name="android:fontFamily">@font/sora</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
